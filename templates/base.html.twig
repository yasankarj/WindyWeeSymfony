<!DOCTYPE html>
<html lang="en-US">
    <head>
        <meta charset="UTF-8">
        <link rel="icon" type="image/gif/png" href="{{ asset('build/images/ww-logo.png' ) }}">
        <title>
            {% block title %}Windy Wee | The Clothing Store{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="header">
            <nav class="navbar navbar-expand-lg navbar-dark justify-content-between">
                <a class="navbar-brand" href="/">
                    <img src="{{ asset('build/images/ww-logo.png' ) }}"
                            width="50"
                            height="50"
                            alt="Windy Wee Logo"
                    >

                    <span class="p-3">Windy Wee | The clothing Store</span>
                </a>

                <ul class="navbar-nav">
                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">
                                Log out
                            </a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}">
                                Log in
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_register') }}">
                                Register
                            </a>
                        </li>
                    {% endif %}
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            Shopping Cart (<span>0</span>)
                        </a>
                    </li>
                </ul>
            </nav>
        </header>

        {% block body %}{% endblock %}

        <p class="footer mb-0">
            <span>Â©</span>
            <a href="https://www.facebook.com/WINDY-WEE-106715018524708" target="_blank">
                Windy Wee | The Clothing Store
            </a>
        </p>

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
